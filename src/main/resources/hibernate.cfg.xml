<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/devcompany</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <mapping class="pl.damiankaplon.devcompanyweb.model.Client"/>
        <mapping class="pl.damiankaplon.devcompanyweb.model.Flat"/>
        <mapping class="pl.damiankaplon.devcompanyweb.model.Sale"/>
        <mapping class="pl.damiankaplon.devcompanyweb.model.Building"/>

    </session-factory>

</hibernate-configuration>